    function askForSushi() {
        const box = document.getElementById('alert-box');
        const phrases = [
            "ğŸš¨ CHAMANDO TODAS AS UNIDADES! ğŸ£",
            "A fofoca estÃ¡ acumulada e o shoyu estÃ¡ esperando!",
            "Sem sushi, sem paz! Marquem essa data! ğŸ¥¢",

    <script>
        /* --- LOGICA DE INTERA√á√ÉO --- */

        // Fun√ß√£o para mostrar ou esconder os cards
        function toggleReveal(id) {
            const element = document.getElementById(id);
            // Verifica se est√° vis√≠vel
            if (element.style.display === "block") {
                element.style.display = "none";
            } else {
                element.style.display = "block";
            }
        }

        // Fun√ß√£o para criar as p√©talas caindo
        function createPetal() {
            const petal = document.createElement('div');
            petal.classList.add('petal');
            
            // Variedade de elementos caindo
            const items = ['üå∏', '‚ú®', 'üíÆ', 'üå∑', 'ü§ç'];
            petal.innerText = items[Math.floor(Math.random() * items.length)];
            
            petal.style.left = Math.random() * 100 + 'vw';
            petal.style.animationDuration = Math.random() * 3 + 4 + 's'; // Entre 4 e 7 segundos
            petal.style.fontSize = Math.random() * 10 + 15 + 'px';
            petal.style.opacity = Math.random() * 0.5 + 0.5;
            
            document.body.appendChild(petal);
            
            // Remove do site ap√≥s cair para n√£o pesar
            setTimeout(() => {
                petal.remove();
            }, 7000);
        }

        // Gera uma p√©tala a cada 400 milissegundos
        setInterval(createPetal, 400);
    </script>
